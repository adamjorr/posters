\definecolor{white}{rgb}{1,1,1}
\definecolor{black}{rgb}{0,0,0}
\definecolor{maroon}{rgb}{.549,.114,.251}
\definecolor{gold}{rgb}{1,.776,.153}
\definecolor{green}{rgb}{.471,.745,.125}

\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[t]
      \begin{column}{.03\paperwidth}
      \end{column}
%      \begin{column}{.07\paperwidth}
%        \begin{center}
%          %\includegraphics[width=.6\linewidth]{logos/i6-hks44}
%        \end{center}
%        \vskip1ex
%      \end{column}
      \begin{column}{.675\paperwidth}
        \vskip4ex
        %\raggedleft
        \usebeamercolor[fg]{title in headline}{\LARGE{\inserttitle}\\}
        \vskip2ex
        \usebeamercolor[fg]{author in headline}{\large{\insertauthor}\\}
        \vskip2ex
        \usebeamercolor[fg]{institute in headline}{\large{\insertinstitute}}
      \end{column}
      \begin{column}[T]{.25\paperwidth}
        %Color box behind logo
        \begin{beamercolorbox}[wd=\linewidth]{block body}
          \begin{center}
            \vskip17ex
            \inserttitlegraphic
            \vskip17ex
          \end{center}
        \end{beamercolorbox}
      \end{column}
      \begin{column}{.01\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}


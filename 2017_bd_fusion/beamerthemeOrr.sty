\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=white,bg=maroon}
\setbeamercolor{footline}{fg=gold, bg=black}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=gold}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}

\setbeamercolor{framesubtitle}{fg=gold, bg=black}
\setbeamercolor{author in head/foot}{fg=gold, bg=maroon}
\setbeamercolor{title in head/foot}{fg=gold, bg=maroon}

\setbeamercolor*{normal text}{fg=white, bg=black}
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=maroon,bg=gold}
\setbeamerfont{block title}{size=\large,series=\bf}
\setbeamercolor{upper separation line head}{fg=gold}

\setbeamercolor*{example body}{fg=maroon,bg=black}
\setbeamercolor*{example text}{fg=white,bg=black}
\setbeamercolor*{example title}{bg=gold,fg=black}

\setbeamercolor{alerted text}{fg=maroon}

%\setbeamercolor{example text}{fg=taorange}
\setbeamercolor{structure}{fg=maroon}

%\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,shadow=true,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=true,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

